<Project>
  <Import Project="..\..\targets\Xenko.props" />
  <PropertyGroup>
    <XenkoAssemblyProcessor>true</XenkoAssemblyProcessor>
    <XenkoAssemblyProcessorOptions>$(XenkoAssemblyProcessorDefaultOptions)</XenkoAssemblyProcessorOptions>
    <TargetFramework>$(XenkoEditorTargetFramework)</TargetFramework>
    <RuntimeIdentifier>win7-x64</RuntimeIdentifier>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="..\..\shared\SharedAssemblyInfo.cs">
      <Link>Properties\SharedAssemblyInfo.cs</Link>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\tools\Xenko.Assimp\Xenko.Assimp.csproj" PrivateAssets="All" />
    <ProjectReference Include="..\..\tools\Xenko.Assimp.Translation\Xenko.Assimp.Translation.vcxproj" PrivateAssets="All" />
    <ProjectReference Include="..\..\tools\Xenko.Importer.Assimp\Xenko.Importer.Assimp.vcxproj" PrivateAssets="All" />
    <ProjectReference Include="..\..\tools\Xenko.Importer.Common\Xenko.Importer.Common.vcxproj" PrivateAssets="All" />
    <ProjectReference Include="..\..\tools\Xenko.Importer.FBX\Xenko.Importer.FBX.vcxproj" PrivateAssets="All" />
    <ProjectReference Include="..\Xenko.Assets\Xenko.Assets.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Analysis\" />
  </ItemGroup>
  <Import Project="$(XenkoSdkTargets)" />

  <PropertyGroup>
    <TargetsForTfmSpecificBuildOutput>_XenkoIncludeExtraAssemblies;$(TargetsForTfmSpecificBuildOutput)</TargetsForTfmSpecificBuildOutput>

  </PropertyGroup>
  <Target Name="_XenkoIncludeExtraAssemblies">
    <ItemGroup>
      <!-- Needed by .NET Core runtime to be able to load C++/CLI assemblies -->
      <BuildOutputInPackage Include="$(OutputPath)ijwhost.dll" Condition="Exists('$(OutputPath)ijwhost.dll')" />
      <BuildOutputInPackage Include="$(OutputPath)Xenko.Assimp.dll" />
      <BuildOutputInPackage Include="$(OutputPath)Xenko.Assimp.Translation.dll" />
      <BuildOutputInPackage Include="$(OutputPath)Xenko.Importer.Assimp.dll" />
      <BuildOutputInPackage Include="$(OutputPath)Xenko.Importer.Assimp.ssdeps" />
      <BuildOutputInPackage Include="$(OutputPath)Xenko.Importer.FBX.dll" />
      <BuildOutputInPackage Include="$(OutputPath)Xenko.Importer.FBX.ssdeps" />
      <BuildOutputInPackage Include="$(OutputPath)Xenko.Importer.Common.dll" />
      <BuildOutputInPackage Include="$(OutputPath)x64\assimp-vc140-mt.dll" TargetPath="x64\assimp-vc140-mt.dll" />
      <BuildOutputInPackage Include="$(OutputPath)x64\libfbxsdk.dll" TargetPath="x64\libfbxsdk.dll" />
    </ItemGroup>
  </Target>
</Project>