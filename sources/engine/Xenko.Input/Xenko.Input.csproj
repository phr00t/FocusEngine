<Project>
  <PropertyGroup>
    <XenkoRuntime>true</XenkoRuntime>
    <XenkoRuntimeWindowsNet5>true</XenkoRuntimeWindowsNet5>
    <XenkoGraphicsApiDependent>true</XenkoGraphicsApiDependent>
  </PropertyGroup>
  <Import Project="..\..\targets\Xenko.props" />
  <PropertyGroup>
    <UseWPF Condition="$(TargetFramework.EndsWith('-windows'))">true</UseWPF>
    <UseWindowsForms Condition="$(TargetFramework.EndsWith('-windows'))">true</UseWindowsForms>
    <XenkoPlatformDependent>true</XenkoPlatformDependent>
    <XenkoAssemblyProcessor>true</XenkoAssemblyProcessor>
    <XenkoBuildTags>*</XenkoBuildTags>
    <XenkoCodeAnalysis>true</XenkoCodeAnalysis>
    <DefineConstants Condition="$(TargetFramework.StartsWith('net4'))">$(DefineConstants);XENKO_INPUT_RAWINPUT</DefineConstants>
  </PropertyGroup>
  <Import Condition="$(XenkoUI.Contains('SDL'))" Project="..\..\targets\SDL.targets" />
  <ItemGroup>
    <Compile Include="..\..\shared\SharedAssemblyInfo.cs">
      <Link>Properties\SharedAssemblyInfo.cs</Link>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Xenko.Games\Xenko.Games.csproj" />
    <PackageReference Include="SharpDX.RawInput" Version="4.2.0" Condition="$(TargetFramework.StartsWith('net4'))" />
    <PackageReference Include="SharpDX.DirectInput" Version="4.2.0" Condition="$(TargetFramework.EndsWith('-windows'))" />
    <PackageReference Include="SharpDX.XInput" Version="4.2.0" Condition="$(TargetFramework.EndsWith('-windows'))" />
  </ItemGroup>
  <Import Project="$(XenkoSdkTargets)" />
</Project>