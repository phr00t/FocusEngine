<Project>
  <PropertyGroup>
    <XenkoRuntime>true</XenkoRuntime>
    <XenkoRuntimeWindowsNet5>true</XenkoRuntimeWindowsNet5>
    <XenkoGraphicsApiDependent>true</XenkoGraphicsApiDependent>
    <UseWindowsForms Condition="$(XenkoUI.Contains('WINFORMS')) OR $(XenkoUI.Contains('WPF'))">true</UseWindowsForms>
  </PropertyGroup>
  <Import Project="..\..\targets\Xenko.props" />
  <PropertyGroup>
    <ProductVersion>8.0.30703</ProductVersion>
    <SchemaVersion>2.0</SchemaVersion>
    <UseWPF Condition="$(TargetFramework.EndsWith('-windows'))">true</UseWPF>
    <UseWindowsForms Condition="$(TargetFramework.EndsWith('-windows'))">true</UseWindowsForms>
    <XenkoAssemblyProcessor>true</XenkoAssemblyProcessor>
    <XenkoAssemblyProcessorOptions>--auto-module-initializer</XenkoAssemblyProcessorOptions>
    <XenkoPlatformDependent>true</XenkoPlatformDependent>
    <XenkoBuildTags>*</XenkoBuildTags>
    <XenkoCodeAnalysis>true</XenkoCodeAnalysis>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Resources\Resource.Designer.cs" />
  </ItemGroup>
  <Choose>
    <When Condition=" '$(XenkoPlatform)' == 'Android'">
      <PropertyGroup>
        <AndroidResgenFile>Resources\Resource.Designer.cs</AndroidResgenFile>
      </PropertyGroup>
      <ItemGroup>
        <Compile Include="Resources\Resource.Designer.cs" />
        <AndroidResource Include="Resources\Layout\Game.axml">
          <SubType>AndroidResource</SubType>
        </AndroidResource>
        <Reference Include="System.Xml" />
      </ItemGroup>
    </When>
  </Choose>
  <Import Condition="$(XenkoUI.Contains('SDL'))" Project="..\..\targets\SDL.targets" />
  <ItemGroup>
    <Compile Include="..\..\shared\SharedAssemblyInfo.cs">
      <Link>Properties\SharedAssemblyInfo.cs</Link>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Xenko.Graphics\Xenko.Graphics.csproj" />
    <PackageReference Include="System.Resources.Extensions" />
  </ItemGroup>
  <Import Project="$(XenkoSdkTargets)" />
</Project>
