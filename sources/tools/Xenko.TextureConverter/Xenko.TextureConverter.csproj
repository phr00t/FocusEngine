<Project>
  <Import Project="..\..\targets\Xenko.props" />
  <PropertyGroup>
    <XenkoAssemblyProcessor>false</XenkoAssemblyProcessor>
    <OutputType>Library</OutputType>
    <TargetFramework>$(XenkoEditorTargetFramework)</TargetFramework>
    <XenkoBuildTags>WindowsTools</XenkoBuildTags>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="..\..\shared\ConsoleProgram.cs">
      <Link>Frontend\Console\ConsoleProgram.cs</Link>
    </Compile>
    <Compile Remove="Frontend\TexArray.cs" />
  </ItemGroup>
  <ItemGroup>
    <XenkoNativeLib Include="$(MSBuildThisFileDirectory)..\..\..\deps\FreeImage\Release\**\*.dll">
      <Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
    </XenkoNativeLib>
    <XenkoNativeLib Include="$(MSBuildThisFileDirectory)..\..\..\deps\TextureWrappers\Release\**\*.dll">
      <Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
    </XenkoNativeLib>
    <XenkoNativeLib Include="$(MSBuildThisFileDirectory)..\..\..\deps\PVRTT\**\*.dll">
      <Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
    </XenkoNativeLib>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\engine\Xenko.Graphics\Xenko.Graphics.csproj" />
  </ItemGroup>
  <Import Project="$(XenkoSdkTargets)" />
</Project>